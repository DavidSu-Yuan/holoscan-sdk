layout(location = 0) in vec2 vert_coord;

out vec2 tex_coord;

void main() {
  gl_Position = vec4((vert_coord * 2.0) - 1.0, 0.0, 1.0);
  tex_coord = vec2(vert_coord.x, 1.0 - vert_coord.y);
}
